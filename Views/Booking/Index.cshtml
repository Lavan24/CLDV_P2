@model IEnumerable<EventEaseApplication.Models.BookingEventEase>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container">
    <h1 class="mb-4">Bookings</h1>
    <hr />

    <form asp-action="Index" method="get" class="form-inline mb-4 d-flex justify-content-center">
        <input type="text" name="searchString" class="form-control mr-2 search-bar" placeholder="Search by Booking ID or Event Name" />
        <button type="submit" class="btn btn-sm search-button">
            Search
        </button>
    </form>

    <p>
        <a asp-action="Create" class="btn btn-sm"
           style="font-family: 'Lora', serif; background-color: white; color: black; border: 1px solid #d6a2b8;"
           onmouseover="this.style.backgroundColor='rgb(214,162,184)';this.style.color='black';this.style.borderColor= 'rgb(214,162,184)';"
           onmouseout="this.style.backgroundColor='white';this.style.color='black';this.style.borderColor='#d6a2b8'">Add a Booking</a>
    </p>
    <hr />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">Booking #@item.BookingId</h5>
                        <small class="text-muted">@item.BookingDate?.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <strong>Event:</strong> @item.Event?.EventName (ID: @item.EventId)
                        </div>
                        <div class="mb-2">
                            <strong>Description:</strong> @item.Event?.EventDescription
                        </div>
                        <div class="mb-2">
                            <strong>Time:</strong> @item.Booking_Time?.ToString("hh:mm tt")
                        </div>
                        <div class="mb-2">
                            <strong>Venue:</strong> @item.Venue?.VenueName (ID: @item.VenueId)
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-sm btn-edit">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-details">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-delete">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Lora:wght@500;700&display=swap');
    @@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap');

    h1 {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        text-align: center;
        margin-top: 20px;
    }

    /* Search Bar Styling */
    .search-bar {
        border: 2px solid #789461;
        border-radius: 10px;
        font-family: 'Josefin Sans', sans-serif;
        padding: 8px;
        width: 300px;
        margin-right: 10px; /* Space between search bar and button */
    }

    /* Button Styling */
    .btn {
        font-family: 'Lora', serif;
        font-weight: 500;
        padding: 8px 20px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .search-button {
        background-color: white;
        color: black;
        border: 1px solid #d6a2b8;
    }

        .search-button:hover {
            background-color: rgb(214,162,184);
            color: black;
            border-color: rgb(214,162,184);
        }

    .btn-create {
        background-color: white;
        color: black;
        border: 1px solid #ddd;
    }

        .btn-create:hover {
            background-color: rgb(225,255,173);
            color: black;
            border-color: rgb(225,255,173);
        }

    .btn-edit, .btn-details {
        background-color: white;
        color: black;
        border: 1px solid #ddd;
    }

        .btn-edit:hover, .btn-details:hover {
            background-color: rgb(225,255,173);
            color: black;
            border-color: rgb(225,255,173);
        }

    .btn-delete {
        background-color: white;
        color: black;
        border: 1px solid #ddd;
    }

        .btn-delete:hover {
            background-color: rgb(131,1,12);
            color: white;
            border-color: rgb(131,1,12);
        }

    .text-muted {
        font-size: 0.9rem;
    }
</style>
