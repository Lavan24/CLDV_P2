@model EventEaseApplication.Models.VenueEventEase

@{
    ViewData["Title"] = "Venue";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@*Link for all the fonts are used in this class*@
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;700&family=EB+Garamond:wght@400;700&display=swap" rel="stylesheet">

@*Heading venue*@
<h1>Add A Venue</h1>
<hr />

@*input boxes for all*@
<div class="venue-panel">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="VenueName" class="form-label">Please enter in a Venue Name:</label>
                    <input asp-for="VenueName" class="form-control  custom-input" />
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VenueLocation" class="form-label">Please enter in the Venue Location:</label>
                    <input asp-for="VenueLocation" class="form-control  custom-input" />
                    <span asp-validation-for="VenueLocation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VenueCapacity" class="form-label">Please enter in the Venue Capacity:</label>
                    <input asp-for="VenueCapacity" class="form-control custom-input" />
                    <span asp-validation-for="VenueCapacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Upload an image:</label>
                    <input type="file" name="imageFile" class="form-control custom-input" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Index</a>
                </div>
            </form>
        </div>
    </div>
</div>

