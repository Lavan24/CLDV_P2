@model EventEaseApplication.Models.EventEventEase

@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Event</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="create-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="EventName" class="form-label">Event Name:</label>
                    <input asp-for="EventName" class="form-control custom-input" />
                    <span asp-validation-for="EventName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="EventDescription" class="form-label">Event Description:</label>
                    <input asp-for="EventDescription" class="form-control custom-input" />
                    <span asp-validation-for="EventDescription" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-create">Create Event</button>
                    <a asp-action="Index" class="btn btn-back">Index</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Lora:wght@500;700&display=swap');
    @@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap');
    @@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap');

    h1 {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        text-align: center;
        margin: 30px 0 20px;
    }


    nav {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        background: rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(12px);
        padding: 1rem;
        border-radius: 30px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        z-index: 1000;
    }

    .form-label {
        font-family: 'Lora', serif;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    .custom-input {
        border: 2px solid #789461;
        border-radius: 10px;
        font-family: 'Josefin Sans', sans-serif;
        padding: 8px;
    }

    .form-control:focus {
        border-color: rgb(254,199,204);
        box-shadow: 0 0 0 0.2rem rgba(254,199,204,0.25);
    }

    .btn {
        font-family: 'Lora', serif;
        font-weight: 500;
        padding: 8px 20px;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .btn-create {
        background-color: rgb(30, 97, 28);
        color: white;
        border: 1px solid rgb(30, 97, 28);
    }

        .btn-create:hover {
            background-color: white;
            color: rgb(30, 97, 28);
            border: 1px solid rgb(254, 194, 200);
            outline: 1px solid rgb(254, 194, 200);
        }

    .btn-back {
        background-color: rgb(30, 97, 28);
        color: white;
        border: 1px solid rgb(30, 97, 28);
    }

        .btn-back:hover {
            background-color: white;
            color: rgb(30, 97, 28);
            border: 1px solid rgb(254, 194, 200);
            outline: 1px solid rgb(254, 194, 200);
        }

    .create-form {
        background-color: rgba(254,199,204,0.4);
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(254,199,204,0.3);
    }
</style>
